<mvc:View controllerName="atdev.controller.EmpDetails"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc">
    <!-- <Input placeholder="Employee ID" id="empId"/>
    <Input placeholder="Employee Name" id="empName"/>
    <Input placeholder="Employee Salary" id="empSalary"/>
    <Input placeholder="Employee Currency" id="empCurrency"/>
    <Button text="Add Details" press="addDetails" /> -->
    <f:SimpleForm editable="true">
        <f:title >
            <core:Title tooltip="hi" text="Employee Data" icon="sap-icon://customer"/>
        </f:title >
        <f:content>
            <Label text="Employee ID" />
            <Input id="empId" width="50%" value="{empData>/empStr/empId}"/>
            <Label text="Employee Name" />
            <Input id="empName" width="50%" editable="{= ${empData>/empStr/empName} === 'Simranjit Singh' ? false : true }" value="{empData>/empStr/empName}"/>
            <Label text="Employee Salary" />
            <Input id="empSalary" width="50%" value="{empData>/empStr/salary}"/>
            <Label text="Employee Currency" />
            <Input id="empCurrency" width="50%" value="{empData>/empStr/currency}"/>
            <Label />
            <Button text="Add Details" press="addDetails" width="50%"/>
            <Button text="Save" press="saveDetails" width="50%"/>
        </f:content>

    </f:SimpleForm>
    <t:Table rows="{empData>/empTab}" visibleRowCount="10" selectionMode="None" width="100%">
        <t:columns>
            <t:Column >
                <t:label>
                    <Label text="Employee ID"/>
                </t:label>
                <t:template>
                    <Text text="{empData>empId}"/>
                </t:template>
            </t:Column>
            <t:Column >
                <t:label>
                    <Label text="Name"/>
                </t:label>
                <t:template>
                    <Text text="{empData>empName}"/>
                </t:template>
            </t:Column>
            <t:Column >
                <t:label>
                    <Label text="Salary"/>
                </t:label>
                <t:template>
                    <Text text="{= ${empData>salary} + ' ' + ${empData>currency} }" />
                </t:template>
            </t:Column>
            <t:Column >
                <t:label>
                    <Label text="Currency"/>
                </t:label>
                <t:template>
                    <Text text="{empData>currency}"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>
</mvc:View>